import pandas as pd

def save_papers(papers, filename: str):
    """
    Save the list of papers to a CSV file.
    
    """
    
    df = pd.DataFrame([
        {
        "PubmedID": p["PubmedID"],
        "Title": p["Title"],
        "PublicationsDate": p["PublicationDate"],
        "Authors": "; ".join(p["Authors"]),
        "Affiliations": "; ".join(p["Affiliations"]),
        }
        for p in papers

    ])
    df.to_csv(filename, index=False)
